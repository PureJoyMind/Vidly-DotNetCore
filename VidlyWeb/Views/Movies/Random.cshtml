@model VidlyWeb.ViewModels.RandomMovieViewModel
@{
    ViewData["Title"] = "Random";
}

@*Comment*@

@{
    var className = Model.Customers.Count > 2 ? "popular" : null;
}
<h1 class="@className">@Model.Movie.Name</h1>

@if (!Model.Customers.Any())
{
    <p>No one has rented this movie.</p>
}
else
{
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>
}

