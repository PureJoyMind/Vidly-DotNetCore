@model IEnumerable<VidlyWeb.Models.Movie>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movie List</h2>
        </div>
        @*<div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-bookmark-plus-fill"></i>&nbsp; Add Category</a>
        </div>*@
    </div>

    @if (!Model.Any())
    {
        <p>We don't have any movies.</p>
    }
    else
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>ID</th>
                <th>Movie Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="2.5%">
                        @obj.Id
                    </td>

                    <td width="50%">
                        @obj.Name
                    </td>

                    @*<td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-outline-warning mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>*@
                    @*<td> 
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="CheckDelete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>*@
                </tr>
            }
            </tbody>
        </table>
    }

</div>