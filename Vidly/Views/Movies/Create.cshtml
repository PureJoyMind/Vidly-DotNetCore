@using Microsoft.EntityFrameworkCore
@model Movie

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Movie</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="All" class="text-danger"></div>*@ @*display all errors*@

        @*<legend class="mt-4">Credentials</legend>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />

            @*
            server side validation
            *@
            <span asp-validation-for="Name" class="text-danger"></span>

            @*
            For client side validation of data we can use the _ValidationsScriptsPartial
            partial view.
            *@
        </div>
        <div class="mb-3">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NumberInStock"></label>
            <input asp-for="NumberInStock" class="form-control" />
            <span asp-validation-for="NumberInStock" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GenreId" class="form-label mt-4">Genres</label>
            <select class="form-select" asp-for="GenreId">
                <option value="">Genres</option>
                <option value="1">Comedy</option>
                <option value="2">Action</option>
                <option value="3">Horror</option>
                <option value="4">Thriller</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary" style="width:150px; height: 65px">Create</button>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary btn-dark" style="width:150px;">
            Back to list
        </a>
    </div>
</form>



@*
    The _ValidationsScriptsPartial contains only scripts so we need to include them in a script section.
    This forces the validations to be done in the client side.
*@

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}